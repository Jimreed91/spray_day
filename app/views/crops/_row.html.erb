 <% @crops.each_with_index do |crop, i| %>

    <tr>
      <th scope="row"><%= "#{i + 1}" %></th>
      <td><%= crop.name %></td>
      <td><%= crop.year %></td>
      <td><%= crop.hectares %></td>
      <td><%= crop.farm.name %></td>
      <td><%= render 'shared/model_dropdown', model: crop %></td>
    </tr>

<% end %>
