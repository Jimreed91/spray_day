<div class="d-flex justify-content-center mt-5">
  <%= form_with  model: @sprayer do |form|%>
    <div class="row">
      <div class="col-md-6">
         <div class="input-group mt-2">
          <%= form.label :Sprayer_name, class: "input-group-text" %>
          <%= form.text_field :name, class: "form-control"  %>
         </div>
                   <%= form.submit class: "btn btn-success mt-2" %>
      </div>
      <div class="col-md-6">
        <div class="input-group mt-2">
          <%= form.label :Capacity, class: "input-group-text" %>
          <%= form.number_field :capacity, class: "form-control" %>
          <span class="input-group-text">l</span>
        </div>
          <%= form.hidden_field :farm_id, value: current_user.farm.id%>

      </div>
    </div>
  <% end %>
</div>
